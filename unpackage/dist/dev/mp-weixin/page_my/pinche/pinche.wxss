/* 导航栏start */
.nav {
  display: flex;
  flex-direction: row;
  height: 82rpx;
  width: 750rpx;
}
.nav .son {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 25%;
}
.nav .son text {
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #999999;
  line-height: 30rpx;
}
.nav .son view {
  position: absolute;
  bottom: 0rpx;
  width: 62rpx;
  height: 6rpx;
  background: #29c563;
}
/* 导航栏end */
.ul {
  display: flex;
  flex-direction: column;
  margin: 10rpx auto 0;
  width: 690rpx;
  padding: 0 0 100rpx 0;
}
.ul .noPinche {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  margin-top: 182rpx;
}
.ul .noPinche image {
  width: 326rpx;
  height: 196rpx;
  margin-bottom: 30rpx;
}
.ul .noPinche text {
  height: 28rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #999999;
}
.ul .list {
  margin: 10rpx 0;
  width: 690rpx;
  box-sizing: border-box;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
}
.ul .list .userMsg {
  position: relative;
  margin-bottom: 30rpx;
  width: 630rpx;
  height: 150rpx;
}
.ul .list .userMsg image {
  position: absolute;
  top: 0;
  left: 0;
  width: 630rpx;
  height: 150rpx;
}
.ul .list .userMsg .pic {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 102rpx;
  height: 102rpx;
  border-radius: 50%;
}
.ul .list .userMsg .name {
  position: absolute;
  top: 36rpx;
  left: 146rpx;
  height: 30rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
  line-height: 30rpx;
}
.ul .list .userMsg .phone {
  position: absolute;
  bottom: 36rpx;
  left: 146rpx;
  width: 184rpx;
  height: 30rpx;
  opacity: 0.5;
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
  line-height: 30rpx;
}
.ul .list .time {
  margin-bottom: 30rpx;
  height: 30rpx;
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  line-height: 30rpx;
}
.ul .list .box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
  height: 80rpx;
  margin-top: 30rpx;
}
.ul .list .box .route {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  width: 450rpx;
  height: 100%;
}
.ul .list .box .route .start,
.ul .list .box .route .end {
  display: flex;
  align-items: center;
}
.ul .list .box .route .start text,
.ul .list .box .route .end text {
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
  overflow: hiddden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.ul .list .box .route .start view,
.ul .list .box .route .end view {
  position: relative;
  margin-right: 8rpx;
  width: 14rpx;
  height: 14rpx;
  border-radius: 50%;
}
.ul .list .box .route .start view .line,
.ul .list .box .route .end view .line {
  position: absolute;
  top: 14rpx;
  left: 6rpx;
  width: 2rpx;
  height: 30rpx;
  background: #f2f3f5;
}
.ul .list .box .price {
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: right;
  color: #111111;
}
.ul .list .box .price text {
  font-size: 36rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: right;
  color: #f55549;
}
.ul .list .state {
  display: flex;
  align-items: center;
  margin-top: 45rpx;
}
.ul .list .state image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 6rpx;
}
.ul .list .state text {
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
}
.ul .list .coachMsg {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 169rpx;
  margin-top: 30rpx;
  border-top: 2rpx solid #e4e4e4;
}
.ul .list .coachMsg .msg {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.ul .list .coachMsg .msg view {
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
}
.ul .list .coachMsg .msg view text {
  color: #666666;
}
.ul .list .coachMsg image {
  margin-top: 40rpx;
  width: 40rpx;
  height: 40rpx;
}
/* 发起拼车start */
.toPincheBtn {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 104rpx;
  background: linear-gradient(134deg, #54d685, #29c563 99%);
  text-align: center;
  line-height: 104rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
}
