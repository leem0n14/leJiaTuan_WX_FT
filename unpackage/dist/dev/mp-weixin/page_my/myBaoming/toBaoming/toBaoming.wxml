<view class="body _div"><view class="msg box"><view class="son"><view class="label">报名姓名</view><view class="input"><input type="text" placeholder="输入报名姓名" data-event-opts="{{[['input',[['__set_model',['$0','stuName','$event',[]],['dataForm']]]]]}}" value="{{dataForm.stuName}}" bindinput="__e"/></view></view><view class="son"><view class="label">性别</view><view class="input"><radio-group data-event-opts="{{[['change',[['handleSex',['$event']]]]]}}" bindchange="__e"><block wx:for="{{sexList}}" wx:for-item="k" wx:for-index="i" wx:key="i"><label class="radio"><radio value="{{k.name}}" checked="{{k.checked}}"></radio>{{k.name+''}}</label></block></radio-group></view></view><view class="son"><view class="label">身份证号码</view><view class="input"><input placeholder="输入身份证号码" type="idcard" data-event-opts="{{[['input',[['__set_model',['$0','cardId','$event',[]],['dataForm']]]]]}}" value="{{dataForm.cardId}}" bindinput="__e"/></view></view><view class="son"><view class="label">身份证地址</view><view class="input"><input type="text" placeholder="输入身份证地址" data-event-opts="{{[['input',[['__set_model',['$0','cardAd','$event',[]],['dataForm']]]]]}}" value="{{dataForm.cardAd}}" bindinput="__e"/></view></view><view class="son"><view class="label">报名驾校</view><view class="input"><picker mode="selector" range-key="schoolName" range="{{schoolList}}" data-event-opts="{{[['change',[['handleSchool',['$event']]]]]}}" bindchange="__e"><view style="color:#666666;">{{dataForm.school?dataForm.school:'选择驾校'}}</view></picker></view></view><view class="son"><view class="label">指定教练</view><view class="input"><picker mode="selector" range-key="coachName" range="{{coachList}}" data-event-opts="{{[['change',[['handleCoach',['$event']]]]]}}" bindchange="__e"><view style="color:#666666;">{{dataForm.coachName?dataForm.coachName:'选择教练(不选默认直营)'}}</view></picker></view></view><view class="son"><view class="label">手机号码</view><view class="input"><input placeholder="输入手机号码" type="number" data-event-opts="{{[['input',[['__set_model',['$0','stuPhone','$event',[]],['dataForm']]]]]}}" value="{{dataForm.stuPhone}}" bindinput="__e"/></view></view></view><view class="picture box"><view class="idcard"><view class="title">身份证上传</view><view class="son _div"><view data-event-opts="{{[['tap',[['upload',[1]]]]]}}" class="upload" bindtap="__e"><image src="{{cdn+(dataForm.cardFront?'/student/'+dataForm.cardFront:'/image/user/null.png')}}" mode="aspectFill"></image><text>身份证正面</text></view><view data-event-opts="{{[['tap',[['upload',[2]]]]]}}" class="upload" bindtap="__e"><image src="{{cdn+(dataForm.cardBack?'/student/'+dataForm.cardBack:'/image/user/null.png')}}" mode="aspectFill"></image><text>身份证反面</text></view></view></view><view class="photo"><view class="title">照片上传</view><view class="son _div"><view data-event-opts="{{[['tap',[['upload',[3]]]]]}}" class="upload" bindtap="__e"><image src="{{cdn+(dataForm.tijianbiao?'/student/'+dataForm.tijianbiao:'/image/user/null.png')}}" mode="aspectFill"></image><text>体检表</text></view><view data-event-opts="{{[['tap',[['upload',[4]]]]]}}" class="upload" bindtap="__e"><image src="{{cdn+(dataForm.photo?'/student/'+dataForm.photo:'/image/user/null.png')}}" mode="aspectFill"></image><text>上半身照片</text></view></view></view></view><button class="sub" disabled="{{!valid||statu===1}}" data-event-opts="{{[['tap',[['sub']]]]}}" bindtap="__e">{{statu===1?'审核已通过，不可修改':'提交'}}</button></view>