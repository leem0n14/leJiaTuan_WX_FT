button::after {
  border: none;
}
.userInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.userInfo .photo {
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
}
.userInfo .photo .text {
  text-align: center;
  width: 112rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
}
.userInfo .photo .pic {
  background: #f2f3f5;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  color: #999;
}
.userInfo .photo .picIsNull {
  background: #f2f3f5;
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  border-radius: 50%;
  color: #999;
}
.userInfo .photo .upLoad {
  margin: 0;
  background: #1aa034;
  border-radius: 40rpx;
  color: #fff;
  font-size: 26rpx;
}
.userInfo .user {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 20rpx;
}
.userInfo .user .userName,
.userInfo .user .userPhone {
  display: flex;
  align-items: center;
  width: 690rpx;
  height: 90rpx;
  margin-top: 30rpx;
  background: #f2f2f2;
  border-radius: 8rpx;
}
.userInfo .user .userName .text,
.userInfo .user .userPhone .text {
  box-sizing: border-box;
  padding-left: 30rpx;
  width: 172rpx;
  height: 90rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 90rpx;
  /* 	background-color: skyblue;
			border-radius: 8rpx; */
}
.userInfo .user .userName input,
.userInfo .user .userPhone input {
  height: 100%;
  width: 578rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
}
.userInfo .user .userName button,
.userInfo .user .userPhone button {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  border-radius: 20rpx;
  background-color: #29C563;
  color: #fff;
}
.subBtn {
  margin-top: 75rpx;
  width: 580rpx;
  height: 90rpx;
  background: linear-gradient(134deg, #54d685, #29c563 99%);
  border-radius: 45rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  line-height: 90rpx;
}

