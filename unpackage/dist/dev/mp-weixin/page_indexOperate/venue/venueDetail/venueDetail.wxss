.swpier {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 560rpx;
}
.body {
  display: flex;
  flex-direction: column;
  position: relative;
  top: -30rpx;
  width: 750rpx;
  box-sizing: border-box;
  padding: 50rpx 24rpx;
  min-height: 500rpx;
  background: #ffffff;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
}
.body .venueName {
  font-size: 36rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: left;
  color: #000000;
}
.body .labels {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
}
.body .labels .son {
  margin-right: 16rpx;
  height: 42rpx;
  line-height: 42rpx;
  padding: 8rpx 14rpx;
  border-radius: 2rpx;
  font-size: 26rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
}
.body .address {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 30rpx 0 60rpx;
  width: 702rpx;
  height: 130rpx;
  box-sizing: border-box;
  padding: 30rpx 24rpx;
  background: #f7f8fa;
  border-radius: 8rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
}
.body .address .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  width: 80vw;
}
.body .address .right text {
  max-width: 458rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.body .address .left {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  height: 100%;
  width: 20vw;
  border-left: 2rpx solid #e3e3e3;
}
.body .address .left image {
  width: 37rpx;
  height: 40rpx;
}
.body .introduction .title {
  margin: 16rpx 0 30rpx;
  width: 64rpx;
  height: 32rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: left;
  color: #333333;
  line-height: 32rpx;
}
.body .introduction .block {
  width: 36rpx;
  height: 6rpx;
  background: #29c563;
}
.box {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding: 30rpx 24rpx;
  border-top: 2rpx solid #f0f1f5;
}
.box .nav {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  width: 702rpx;
}
.box .nav .son {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50%;
}
.box .nav .son .text {
  text-align: center;
  color: #000000;
}
.box .nav .son .act {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
}
.box .nav .son .nAct {
  font-size: 30rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #666666;
}
.box .nav .son .block {
  margin: 12rpx 0 24rpx;
  width: 36rpx;
  height: 6rpx;
  background: #29c563;
}
.box .msgList {
  display: flex;
  flex-direction: column;
}
.box .msgList .list {
  display: flex;
  flex-direction: row;
  width: 702rpx;
  min-height: 160rpx;
  box-sizing: border-box;
  padding: 24rpx;
  background: #ffffff;
  border: 1rpx solid #f0f1f5;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}
.box .msgList .list .userPic {
  width: 100rpx;
  height: 100rpx;
  background: rgba(0, 0, 0, 0);
  border-radius: 50%;
  margin-right: 24rpx;
}
.box .msgList .list .msg {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: center;
}
.box .msgList .list .msg .up {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin-bottom: 24rpx;
}
.box .msgList .list .msg .up .name {
  margin-right: 22rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
}
.box .msgList .list .msg .up .score {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.box .msgList .list .msg .up .score .num {
  margin-left: 14rpx;
  height: 20rpx;
  line-height: 20rpx;
  font-size: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
}
.box .msgList .list .msg .down {
  display: flex;
  flex-direction: row;
}
.box .msgList .list .msg .down .label {
  margin-right: 16rpx;
  width: 97rpx;
  height: 36rpx;
  line-height: 36rpx;
  font-size: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  border-radius: 2rpx;
}
.box .msgList .list .schoolPhoto {
  width: 180rpx;
  height: 130rpx;
  border: 1rpx solid #f0f1f5;
  border-radius: 8rpx;
}
.box .msgList .list .text {
  display: flex;
  flex-direction: column;
  justify-content: center;
  height: 130rpx;
  margin-left: 20rpx;
}
.box .msgList .list .text .schoolName {
  width: 308rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #333333;
  line-height: 29rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.box .msgList .list .text .address {
  width: 251rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
  line-height: 45rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

