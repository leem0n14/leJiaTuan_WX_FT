<view class="beCoach-view"><view class="box idCard-img"><view data-event-opts="{{[['tap',[['chooseImage',[0]]]]]}}" class="son" bindtap="__e"><image class="image" src="{{form.idPhotoz===''?cdn+'/image/beCoach/idCard1.webp':cdn+'/coach/'+form.idPhotoz}}"></image></view><text class="text">上传身份证正面</text><view data-event-opts="{{[['tap',[['chooseImage',[1]]]]]}}" class="son" bindtap="__e"><image class="image" src="{{form.idPhotof===''?cdn+'/image/beCoach/idCard2.webp':cdn+'/coach/'+form.idPhotof}}"></image></view><text class="text">上传身份证背面</text></view><view class="box form"><view class="item"><text class="text">身份证号</text><input class="input" type="text" placeholder="请输入身份证号" data-event-opts="{{[['input',[['__set_model',['$0','idNumber','$event',[]],['form']]]]]}}" value="{{form.idNumber}}" bindinput="__e"/></view><view class="item"><text class="text">姓名</text><input class="input" type="text" placeholder="请输入姓名" data-event-opts="{{[['input',[['__set_model',['$0','name','$event',[]],['form']]]]]}}" value="{{form.name}}" bindinput="__e"/></view><view class="item"><text class="text">电话</text><input class="input" type="text" placeholder="请输入电话" data-event-opts="{{[['input',[['__set_model',['$0','phone','$event',[]],['form']]]]]}}" value="{{form.phone}}" bindinput="__e"/></view><view class="item"><text class="text">申请驾校</text><picker range-key="schoolName" range="{{schoolList}}" data-event-opts="{{[['change',[['bindPickerChange',['$event']]]]]}}" bindchange="__e"><view class="picker-view">{{form.schoolName?form.schoolName:'请选择驾校'}}</view></picker></view><view class="item"><text class="text">介绍</text><textarea class="input" auto-height="{{true}}" placeholder="请输入介绍" data-event-opts="{{[['input',[['__set_model',['$0','introduce','$event',[]],['form']]]]]}}" value="{{form.introduce}}" bindinput="__e"></textarea></view></view><button data-event-opts="{{[['tap',[['sub']]]]}}" class="sub-btn" bindtap="__e">提交申请</button></view>