<view><view class="userMsg"><view class="header"><view class="name"><view class="text">姓名</view><input type="text" placeholder="请输入姓名" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view><view class="phone"><view class="text">手机号码</view><input type="number" placeholder="请输入手机号" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view class="type son"><view class="text">驾照类型</view><picker class="typeChoose" mode="selector" range="{{typeName}}" data-event-opts="{{[['change',[['changeType',['$event']]]]]}}" bindchange="__e"><view>{{type}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view class="course son"><view class="text">练车科目</view><picker class="courseChoose" mode="selector" range="{{courseType}}" data-event-opts="{{[['change',[['chooseCourse',['$event']]]]]}}" bindchange="__e"><view>{{course==''?'请选择科目':course}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view class="site course son"><view class="text">练车场地</view><picker class="courseChoose" mode="selector" range="{{sites}}" range-key="siteName" data-event-opts="{{[['change',[['choosesite',['$event']]]]]}}" bindchange="__e"><view>{{site==''?'请选择场地':site}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view></view><view class="body"><view class="isShuttle"><view class="title">{{receive===0?'该时间段不可接送':'是否接送'}}</view><switch style="transform:scale(0.8);" checked="{{isShuttle}}" disabled="{{receive===0}}" color="#29c563" data-event-opts="{{[['tap',[['e0',['$event']]]],['change',[['shuttle',['$event']]]]]}}" bindtap="__e" bindchange="__e"></switch></view><view class="practiceTime son"><view class="text">练车时间</view><picker class="chooseTime" mode="selector" range="{{timeList}}" range-key="carTime" value="{{pTime}}" data-event-opts="{{[['change',[['chooseTime',['$event']]]]]}}" bindchange="__e"><view>{{pTime}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view class="practiceTime son"><view class="text">练车日期</view><picker class="chooseTime" mode="date" start="{{formattedDate}}" end="{{formattedDateEnd}}" value="{{pDate}}" data-event-opts="{{[['change',[['chooseDate',['$event']]]]]}}" bindchange="__e"><view>{{pDate}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><block wx:if="{{isShuttle}}"><view class="sAddress son"><view class="text">接送地址</view><input type="text" disabled="{{true}}" placeholder="请选择地址" data-event-opts="{{[['tap',[['chooseAddress']]],['input',[['__set_model',['','addName','$event',[]]]]]]}}" value="{{addName}}" bindtap="__e" bindinput="__e"/><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view></block><button disabled="{{!valid}}" data-event-opts="{{[['tap',[['toBooking']]]]}}" bindtap="__e">确定</button></view></view></view>