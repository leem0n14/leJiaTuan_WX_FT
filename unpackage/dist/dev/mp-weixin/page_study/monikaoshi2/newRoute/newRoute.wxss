.msg {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.msg .name {
  display: flex;
  flex-direction: column;
  margin: 30rpx 0;
}
.msg .name text {
  font-size: 36rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #111111;
  margin: 20rpx 0;
}
.msg .name .input {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 702rpx;
  height: 98rpx;
  padding: 0 22rpx;
  box-sizing: border-box;
  background: #f2f2f2;
  border-radius: 8rpx;
}
.msg .name .input input {
  width: 500rpx;
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.msg .name .input .zidong {
  height: 98rpx;
  line-height: 98rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: right;
  color: #4988f5;
}
.msg .voice .text {
  display: flex;
  flex-direction: column;
}
.msg .voice .text text {
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  text-align: left;
}
.msg .voice .radio {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 702rpx;
  padding: 44rpx 0;
  border-bottom: 2rpx solid #f2f3f5;
}
.msg .voice .radio text {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #111111;
}
.msg .voice .radio text text {
  margin-top: 20rpx;
  font-size: 20rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #c7c7c7;
}
.msg .voice .lightList {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  width: 702rpx;
  padding: 44rpx 0;
}
.tips {
  display: flex;
  flex-direction: column;
  padding: 40rpx 24rpx;
  height: 30vh;
  max-height: 30vh;
  overflow-y: scroll;
}
.tips .title {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.tips .title text {
  margin-left: 16rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.tips text {
  margin: 10rpx 0;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
  line-height: 32rpx;
}
.next {
  position: fixed;
  bottom: 0;
  left: 0;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
  width: 750rpx;
  height: 104rpx;
  line-height: 104rpx;
  background: linear-gradient(134deg, #54d685, #29c563 99%);
}

