.nav {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  width: 750rpx;
  height: 90rpx;
  background: #ffffff;
}
.nav .son {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
  width: 50%;
}
.nav .son text {
  line-height: 90rpx;
  height: 90rpx;
  border-bottom: 6rpx solid #111111;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: center;
  color: #111111;
}
.body {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  max-height: 1000rpx;
  overflow-y: auto;
}
.body .son {
  box-sizing: border-box;
  width: 690rpx;
  height: 360rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin: 15rpx 0;
}
.body .son .up {
  height: 244rpx;
  width: 690rpx;
  background-color: skyblue;
}
.body .son .down {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0rpx 30rpx;
  box-sizing: border-box;
  height: 116rpx;
  width: 690rpx;
}
.body .son .down .l {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 116rpx;
}
.body .son .down .l .name {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #111111;
}
.body .son .down .l .msg {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
}
.body .son .down .l .msg text {
  margin-right: 20rpx;
}
.body .son .down .r {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 42rpx;
  height: 42rpx;
}
.body .son .down .r .son {
  width: 8rpx;
  height: 8rpx;
  border-radius: 50%;
  background-color: #333333;
}
.routeList {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
  width: 750rpx;
}
.routeList .son {
  position: relative;
  width: 750rpx;
  height: 140rpx;
  background: #ffffff;
  margin-bottom: 2rpx;
}
.routeList .son image {
  position: absolute;
  top: 30rpx;
  left: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}
.routeList .son .routeName {
  position: absolute;
  top: 32rpx;
  left: 130rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Medium;
  font-weight: 500;
  text-align: left;
  color: #111111;
}
.routeList .son .msg {
  position: absolute;
  bottom: 32rpx;
  left: 130rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #999999;
}
.routeList .son .msg text {
  margin-right: 20rpx;
}
.routeList .son .distance {
  position: absolute;
  top: 58rpx;
  right: 102rpx;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: right;
  color: #4988f5;
}
.routeList .son .detailed {
  position: absolute;
  right: 30rpx;
  top: 52rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 42rpx;
  height: 42rpx;
}
.routeList .son .detailed view {
  border-radius: 50%;
  height: 8rpx;
  width: 8rpx;
  background-color: #333333;
}
.bottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 750rpx;
  height: 104rpx;
  line-height: 104rpx;
  background: linear-gradient(134deg, #54d685, #29c563 99%);
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
}

