page {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f2f3f5;
}
.box {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 15rpx 0;
  width: 702rpx;
  background: #ffffff;
  border-radius: 16rpx;
}
.box .title {
  width: 100%;
  height: 108rpx;
  line-height: 108rpx;
  box-sizing: border-box;
  padding-left: 35rpx;
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #666666;
}
.box .ul {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-bottom: 20rpx;
}
.box .ul .li {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 90rpx;
  width: 100%;
  box-sizing: border-box;
  padding: 24rpx;
}
.box .ul .li view {
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 90%;
  height: 100%;
}
.box .ul .li view .circle {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 38rpx;
  height: 38rpx;
  background: #29c563;
  border-radius: 50%;
  margin-right: 20rpx;
}
.box .ul .li view .circle text {
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  color: #ffffff;
  text-align: center;
}
.box .ul .li view text {
  max-width: 400rpx;
  overflow: hiddden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.box .ul .li image {
  width: 17rpx;
  height: 17rpx;
}

