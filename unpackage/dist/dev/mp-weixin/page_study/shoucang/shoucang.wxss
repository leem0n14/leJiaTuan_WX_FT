.hd {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  width: 750rpx;
  height: 331rpx;
}
.hd .box {
  position: relative;
  width: 702rpx;
  height: 271rpx;
}
.hd .box image {
  position: absolute;
  top: 0;
  left: 0;
  width: 702rpx;
  height: 271rpx;
}
.hd .box .content {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 2;
  width: 702rpx;
  height: 271rpx;
}
.hd .box .content image {
  position: absolute;
  top: 44rpx;
  left: 38rpx;
  width: 36rpx;
  height: 35rpx;
  opacity: 0.58;
}
.hd .box .content text {
  position: absolute;
  top: 46rpx;
  left: 93rpx;
  height: 35rpx;
  line-height: 35rpx;
  font-size: 32rpx;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
}
.hd .box .content .num {
  position: absolute;
  top: 125rpx;
  left: 93rpx;
  font-size: 91rpx;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
}
.bd {
  display: flex;
  flex-direction: column;
  padding: 12rpx 24rpx;
  background-color: #ffffff;
}
.bd .son {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 98rpx;
  width: 702rpx;
}
.bd .son text {
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.bd .son .son-text {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bd .son .num {
  display: flex;
  align-items: center;
}
.bd .son .num text {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: right;
  color: #c1c1c1;
}
.bd .son .num image {
  margin: 5rpx 0 0 10rpx;
  width: 17rpx;
  height: 17rpx;
}

