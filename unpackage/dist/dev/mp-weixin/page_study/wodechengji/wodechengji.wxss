.hd {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  width: 750rpx;
  height: 397rpx;
  background: linear-gradient(134deg, #54d685, #29c563 99%);
}
.hd .title {
  display: flex;
  align-items: center;
}
.hd .title text {
  margin-left: 10rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #ffffff;
}
.hd .title image {
  width: 26rpx;
  height: 32rpx;
  opacity: 0.6;
}
.hd .highest {
  font-size: 91rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: left;
  color: #ffffff;
}
.hd .bottom {
  display: flex;
  justify-content: center;
  width: 750rpx;
  height: 127rpx;
  background: linear-gradient(134deg, #54d685, #29c563 99%);
}
.hd .bottom .son {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  height: 100%;
  width: 33%;
}
.hd .bottom .son .num {
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Bold;
  font-weight: 700;
  text-align: center;
  color: #ffffff;
}
.hd .bottom .son text {
  margin-top: 17rpx;
  opacity: 0.8;
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #ffffff;
}
.bd {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bd .title {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 102rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #ffffff;
}
.bd .title view {
  width: 6rpx;
  height: 29rpx;
  background: #29c563;
}
.bd .title text {
  margin-left: 14rpx;
  font-size: 32rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: center;
  color: #333333;
}
.bd .ul {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 750rpx;
  background-color: #ffffff;
}
.bd .ul .li {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  width: 690rpx;
  height: 90rpx;
  background: #ffffff;
}
.bd .ul .li .num {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #f93030;
}
.bd .ul .li .time {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.bd .ul .li .date {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #c1c1c1;
}
