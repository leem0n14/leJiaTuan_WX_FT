.body {
  display: flex;
  flex-direction: column;
  margin-top: 20rpx;
}
.body .list {
  display: flex;
  flex-direction: column;
  width: 750rpx;
  height: 210rpx;
  background: #ffffff;
  box-sizing: border-box;
  padding: 30rpx 24rpx;
  border: 2rpx solid #f2f3f5;
}
.body .list .title {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.body .list .title text {
  font-size: 28rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: left;
  color: #333333;
}
.body .list .title .num {
  display: flex;
  align-items: center;
}
.body .list .title .num text {
  font-size: 24rpx;
  font-family: Source Han Sans CN, Source Han Sans CN-Regular;
  font-weight: 400;
  text-align: right;
  color: #c1c1c1;
}
.body .list .title .num image {
  width: 17rpx;
  height: 17rpx;
}
.body .list .content {
  display: flex;
}
.body .list .content .son {
  margin-right: 60rpx;
  width: 90rpx;
  height: 90rpx;
}
.body .list .content .son image {
  width: 90rpx;
  height: 90rpx;
}

