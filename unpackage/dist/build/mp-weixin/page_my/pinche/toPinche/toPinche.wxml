<view><view class="box"><view class="son name"><text>发布人</text><input class="input" type="text" placeholder="请输入发布人姓名" data-event-opts="{{[['input',[['__set_model',['','name','$event',[]]]]]]}}" value="{{name}}" bindinput="__e"/></view><view class="son phone"><text>联系方式</text><input class="input" type="number" placeholder="请输入联系方式" maxlength="11" data-event-opts="{{[['input',[['__set_model',['','phone','$event',[]]]]]]}}" value="{{phone}}" bindinput="__e"/></view><view class="son time"><text>出发日期</text><picker class="picker" mode="date" data-event-opts="{{[['change',[['bindDateChange',['$event']]]]]}}" bindchange="__e"><view>{{date==null?'请选择日期':date}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view class="son time"><text>出发时间</text><picker class="picker" mode="time" data-event-opts="{{[['change',[['bindTimeChange',['$event']]]]]}}" bindchange="__e"><view>{{time==null?'请选择出发时间':time}}</view></picker><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view data-event-opts="{{[['tap',[['chooseLocation',[0]]]]]}}" class="son startAddress" bindtap="__e"><text>接送地点</text><view class="content">{{startAddress==null?'请选择接送地点':startAddress}}</view><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view data-event-opts="{{[['tap',[['chooseLocation',[1]]]]]}}" class="son endAddress" bindtap="__e"><text>目的地</text><view class="content">{{endAddress==null?'请选择目的地':endAddress}}</view><image class="triangle" src="{{cdn+'/icon/triangle.svg'}}" mode></image></view><view data-event-opts="{{[['tap',[['getPrice']]]]}}" class="son price" bindtap="__e"><text>价格(元)</text><view class="content">{{price==null?'选择地点后自动根据距离算价格':price}}</view></view></view><button disabled="{{!(startAddress&&endAddress&&time&&phone&&name&&date)}}" data-event-opts="{{[['tap',[['sub',['$event']]]]]}}" bindtap="__e">发布</button></view>